<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:id="@+id/label111"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/label111"
            android:background="@drawable/curved_border_relative"
            android:layout_margin="15dp"
            android:id="@+id/curved_layout"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_account_box_black_24dp"
                android:drawableStart="@drawable/ic_account_box_black_24dp"
                android:drawablePadding="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:drawableEnd="@drawable/ic_edit_black_24dp"
                android:id="@+id/username_acc" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="5dp"
                android:textColor="#000"
                android:layout_below="@+id/username_acc"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:id="@+id/email_acc"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="#000"
                android:drawablePadding="5dp"
                android:layout_below="@+id/email_acc"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawableStart="@drawable/ic_call_black_24dp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/mobileNo_acc"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="******"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_icons8_lock"
                android:drawableStart="@drawable/ic_icons8_lock"
                android:drawablePadding="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:drawableEnd="@drawable/ic_edit_black_24dp"
                android:id="@+id/acc_password"
                android:layout_below="@+id/mobileNo_acc"/>
    </RelativeLayout>

    </RelativeLayout>

</ScrollView>